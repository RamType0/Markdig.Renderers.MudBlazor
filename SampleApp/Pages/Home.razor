";

    MarkdownPipeline GetPipeline()
    {
        var pipelineBuilder = new MarkdownPipelineBuilder().UseAdvancedExtensions();

        if (useMudBlazor)
        {
            pipelineBuilder.UseMudBlazor();
        }
        if (useKroki)
        {
            pipelineBuilder.UseKroki();
        }
        return pipelineBuilder.Build();
    }
}